import {Picker} from '@react-native-picker/picker';

    const dummyFirms = [
        { firm_id: 1, firm_name: 'Firm A' },
        { firm_id: 2, firm_name: 'Firm B' },
        { firm_id: 3, firm_name: 'Firm C' },
        // Add more firms as needed
    ];

    // Define a state to hold the list of firms and the selected firm ID
    const [firms, setFirms] = useState(dummyFirms);
    const [selectedFirmId, setSelectedFirmId] = useState(null);

    const handleFirmSelection = (selectedFirmId, selectedFirmName) => {
        // Update firm_id in your formState
        dispatchFormState({
        inputId: 'firm_id',
        validationResult: true,
        inputValue: selectedFirmId,
        });

        // Update care_of in your formState
        dispatchFormState({
        inputId: 'care_of',
        validationResult: true,
        inputValue: selectedFirmName,
        });

        // Set the selected firm ID in state
        setSelectedFirmId(selectedFirmId);
    };

    <Text>Select Firm:</Text>
    <Picker
        selectedValue={selectedFirmId}
        onValueChange={(itemValue, itemIndex) => {
        const selectedFirm = firms[itemIndex];
        handleFirmSelection(selectedFirm.firm_id, selectedFirm.firm_name);
        }}>
        {firms.map((firm, index) => (
        <Picker.Item key={index} label={firm.firm_name} value={firm.firm_id} />
        ))}
    </Picker>